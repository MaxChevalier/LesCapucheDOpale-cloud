generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  roleId   Int
  role     Role    @relation(fields: [roleId], references: [id])
  quests   Quest[]
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Adventurer {
  id             Int          @id @default(autoincrement())
  name           String
  specialityId    Int
  speciality      Speciality    @relation(fields: [specialityId], references: [id])
  dailyRate      Int
  equipmentTypes      EquipmentType[]
  consumableTypes    ConsumableType[]
  experience         Int
  quests             Quest[]
  rests              AdventurerRest[]
}

model Speciality {
  id           Int          @id @default(autoincrement())
  name         String
  adventurers  Adventurer[]
}

model Equipment {
  id                  Int                   @id @default(autoincrement())
  name                String
  equipmentTypeId     Int
  equipmentType       EquipmentType         @relation(fields: [equipmentTypeId], references: [id])
  cost                Int
  maxDurability       Int
  currentDurability   Int
  QuestStockEquipment QuestStockEquipment[]
  stocks              EquipmentStock[]
}

model EquipmentType {
  id          Int          @id @default(autoincrement())
  name        String
  equipments  Equipment[]
  adventurers Adventurer[]
}

model EquipmentStatus {
  id              Int              @id @default(autoincrement())
  name            String
  equipmentStocks EquipmentStock[]
}

model EquipmentStock {
  id                   Int                   @id @default(autoincrement())
  equipmentId          Int
  durability           Int
  statusId             Int                   @default(1)
  status               EquipmentStatus       @relation(fields: [statusId], references: [id])
  equipment            Equipment             @relation(fields: [equipmentId], references: [id])
  questStockEquipments QuestStockEquipment[]
}

model Consumable {
  id               Int               @id @default(autoincrement())
  name             String
  consumableTypeId Int
  consumableType   ConsumableType    @relation(fields: [consumableTypeId], references: [id])
  quantity         Int
  cost             Int
  questConsumables QuestConsumable[]
}

model ConsumableType {
  id          Int          @id @default(autoincrement())
  name        String
  consumables Consumable[]
  adventurers Adventurer[]
}

model Quest {
  id                   Int                   @id @default(autoincrement())
  name                 String
  description          String
  finalDate            DateTime
  startDate            DateTime?
  reward               Int
  statusId             Int
  status               Status                @relation(fields: [statusId], references: [id])
  estimatedDuration    Int
  recommendedXP        Int
  adventurers          Adventurer[]
  questStockEquipments QuestStockEquipment[]
  questConsumables     QuestConsumable[]
  UserId               Int
  user                 User                  @relation(fields: [UserId], references: [id])
  adventurerRests      AdventurerRest[]
}

model Status {
  id     Int     @id @default(autoincrement())
  name   String
  quests Quest[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Int
  description String
  date        DateTime
  total       Int
}

model QuestStockEquipment {
  id               Int            @id @default(autoincrement())
  questId          Int
  quest            Quest          @relation(fields: [questId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  equipmentStockId Int
  equipmentStock   EquipmentStock @relation(fields: [equipmentStockId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Equipment        Equipment?     @relation(fields: [equipmentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  equipmentId      Int?

  @@unique([questId, equipmentStockId])
  @@map("quest_stock_equipment")
}

model QuestConsumable {
  id           Int        @id @default(autoincrement())
  questId      Int
  quest        Quest      @relation(fields: [questId], references: [id])
  consumableId Int
  consumable   Consumable @relation(fields: [consumableId], references: [id])
  quantity     Int

  @@unique([questId, consumableId])
  @@map("quest_consumable")
}

model AdventurerRest {
  id           Int        @id @default(autoincrement())
  adventurerId Int
  adventurer   Adventurer @relation(fields: [adventurerId], references: [id])
  questId      Int?
  quest        Quest?     @relation(fields: [questId], references: [id])
  startDate    DateTime
  endDate      DateTime
  reason       String
  type         String     @default("rest") // "rest" | "unavailable" | "mission" | "mission_rest"

  @@map("adventurer_rest")
}
